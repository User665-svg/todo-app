{
  "version": "0.2.0",
  "configurations": [
    {
      // 既存のブラウザ用
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Web Page",
      "url": "http://localhost:5500/www/index.html",
      "webRoot": "${workspaceFolder}/www"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Run current test TS (compiled JS)",
      "program": "${workspaceFolder}/www/js/test/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/www/js/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      // "preLaunchTask": "tsc: build www"
    }
  ]
}
